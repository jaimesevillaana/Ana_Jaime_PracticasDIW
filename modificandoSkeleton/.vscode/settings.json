// .vscode/settings.json

{
    "liveSassCompile.settings.formats": [
        {
            // Formato de salida: normal (no minificado)
            "format": "expanded", 
            "extensionName": ".css", 
            
            // Ruta de guardado: 
            // 1. `../dist/css/` -> Sube un nivel (sale de .vscode) y va a dist/css
            "savePath": "~/../dist/css", 
            
            // Reemplaza el nombre del archivo SASS original (ej: mis_estilos.scss) con la extensión .css
            "generateMap": true // Genera el .map para depuración
        }
    ],
    // *** CLAVE: Ignorar parciales y node_modules ***
    "liveSassCompile.settings.excludeList": [
        "/**/node_modules/**",
        "/**/_*.scss" 
    ]
}