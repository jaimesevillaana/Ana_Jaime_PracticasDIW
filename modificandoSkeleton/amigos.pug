//- amigos.pug

extends layout_base.pug 

block variables
    - var pageTitle = "Amigos";

mixin fotoAmigo(nombre, descripcion, clase)
    .four.columns.u-text-center
        .card-amigo(class=clase)
            .u-full-width.placeholder-img 
                | [Foto de #{nombre}]
            h5 #{nombre}
            p.u-small #{descripcion}

block content 
    
        .row
            .twelve.columns
                h1.section-heading Nuestros Amigos
                p.lead

        //--- FILA 1 (12 columnas) ---
        .row.galeria-amigos
            +fotoAmigo("Pepe 'El Chicle'", "Siempre pide chicles de fresa", "uno")
            +fotoAmigo("María 'La Fresca'", "Viene por la bebida energética", "dos")
            +fotoAmigo("Javier 'El Golosina'", "Fan de las gominolas ácidas", "tres")
            
        //--- FILA 2 (12 columnas nuevas) ---
        .row.galeria-amigos(style="margin-top: 30px;") 
            +fotoAmigo("Laura 'La Fiestera'", "La que encarga todos los packs", "cuatro")
            +fotoAmigo("Carlos 'El Vecino'", "Pasa a saludar y por el pan", "cinco")
            +fotoAmigo("Ana 'La Despistada'", "Siempre se olvida la cartera", "seis")