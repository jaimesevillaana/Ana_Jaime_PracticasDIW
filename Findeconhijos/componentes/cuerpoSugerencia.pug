.container.mt-5.pt-4
  .row.g-4
    each val, index in [1,2,3,4,5,6,7,8,9]
      .col-md-4
        a.text-decoration-none.text-dark(href="itinerarios.html")
          .card.border-0.p-3.text-center.no-shadow
            .d-flex.justify-content-center.align-items-center
              img.img-fluid.rounded.me-2(src=`https://picsum.photos/seed/sug${index}/180/180`, alt="Imagen itinerario sugerido")
              .stars.d-flex.flex-column.align-items-center
                span.text-warning ★
                span.text-warning ★
                span.text-warning ★
                span.text-muted ☆
                span.text-muted ☆
            h5.mt-3.mb-1 Itinerario #{index}
            p.text-muted Creado por Usuario#{index}
